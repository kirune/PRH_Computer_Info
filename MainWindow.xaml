<Window x:Class="HelpCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PRH I.T. HELP CARD"
        SizeToContent="Height"
        MaxHeight="800"
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background ="#6E9C78"
        FontFamily="Trebuchet MS"
        FontWeight="Bold"
        Icon="Assets/AppIconNew.ico">

    <Window.Resources>
        <!-- Shared Card Style -->
        <Style x:Key="InfoCard" TargetType="Border">
            <Setter Property="Background" Value="#005C27"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      Opacity="0.4"
                                      BlurRadius="6"
                                      ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" Margin="10">

            <!-- Logo + Title Row -->
            <Grid Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Logo -->
                <Image Source="Assets/prh_logo.png"
                       Stretch="Uniform"
                       Margin="10,0,10,0"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"/>

                <!-- Title -->
                <TextBlock Grid.ColumnSpan="2"
                           Text="Need I.T. Help?"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#f5f5f5"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Computer Name -->
            <TextBlock Text="Computer Name:"
                       FontSize="16"
                       Foreground="#f5f5f5"
                       Margin="0,0,0,4"
                       HorizontalAlignment="Center"/>
            <Border Style="{StaticResource InfoCard}" Width="260">
                <TextBlock x:Name="ComputerNameText"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#f5f5f5"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- IP Addresses -->
            <TextBlock Text="IP Addresses:"
                       FontSize="16"
                       Foreground="#f5f5f5"
                       Margin="15,12,0,4"
                       HorizontalAlignment="Center"/>
            <ItemsControl x:Name="IpList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource InfoCard}" Width="240">
                            <TextBlock Text="{Binding}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#f5f5f5"
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Current User -->
            <TextBlock Text="Current User:"
                       FontSize="16"
                       Foreground="#f5f5f5"
                       Margin="15,12,0,4"
                       HorizontalAlignment="Center"/>
            <Border Style="{StaticResource InfoCard}" Width="240">
                <TextBlock x:Name="CurrentUserText"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#f5f5f5"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Default Printer (now clickable) -->
            <TextBlock Text="Default Printer:"
           FontSize="16"
           Foreground="#f5f5f5"
           Margin="15,12,0,4"
           HorizontalAlignment="Center"/>
            <Button x:Name="DefaultPrinterButton"
        Background="#005C27"
        Tag="#458357"
        Style="{StaticResource RoundedButton}"
        MinWidth="280"
        MaxWidth="400"
        Height="50"
        Click="DefaultPrinterButton_Click">
                <TextBlock x:Name="DefaultPrinterText"
               FontSize="16"
               FontWeight="Bold"
               Foreground="#f5f5f5"
               TextWrapping="Wrap"
               TextTrimming="CharacterEllipsis"
               HorizontalAlignment="Center"/>
            </Button>


            <!-- OS Version -->
            <TextBlock Text="Operating System:"
                       FontSize="16"
                       Foreground="#f5f5f5"
                       Margin="15,12,0,4"
                       HorizontalAlignment="Center"/>
            <Border Style="{StaticResource InfoCard}" Width="280">
                <TextBlock x:Name="OsText"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#f5f5f5"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Last Reboot -->
            <TextBlock Text="Last Reboot Time:"
                       FontSize="16"
                       Foreground="#f5f5f5"
                       Margin="15,12,0,4"
                       HorizontalAlignment="Center"/>
            <Border Style="{StaticResource InfoCard}" Width="280">
                <TextBlock x:Name="RebootTimeText"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#f5f5f5"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Epic Help -->
            <TextBlock Text="Need Epic help?"
                       FontSize="16"
                       Foreground="#f5f5f5"
                       Margin="15,12,0,4"
                       HorizontalAlignment="Center"/>
            <Button x:Name="EpicHelpButton"
                    Background="#005C27"
                    Tag="#458357"
                    Style="{StaticResource RoundedButton}"
                    Width="280"
                    Height="70"
                    Click="EpicHelp_Click">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Providence: 855-415-8188"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#f5f5f5"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Informatics: 509-336-7xxx"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#f5f5f5"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button x:Name="CopyButton"
                        Content="Copy Info"
                        Background="#005C27"
                        Tag="#458357"
                        Style="{StaticResource RoundedButton}"
                        Click="Copy_Click"/>

                <Button x:Name="EmailButton"
                        Content="Contact IT"
                        Background="#005C27"
                        Tag="#458357"
                        Style="{StaticResource RoundedButton}"
                        Width="120"
                        Click="EmailIT_Click"/>

                <Button Content="Done"
                        Background="#4D4D4A"
                        Tag="#7e7e7c"
                        Style="{StaticResource RoundedButton}"
                        Width="100"
                        Click="Done_Click"/>
            </StackPanel>

            <!-- Footer -->
            <TextBlock Text="© 2025 PRH IT — Licensed under GPL-3.0 (code only, branding excluded)"
                       FontSize="11"
                       Foreground="#231F20"
                       Margin="0,15,0,0"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Window>
