<Window x:Class="ComputerInfo.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About ComputerInfo"
        SizeToContent="Height"
        Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#6E9C78"
        FontFamily="Trebuchet MS"
        FontWeight="Bold"
        ResizeMode="NoResize">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
        <StackPanel>
            <TextBlock Text="ComputerInfo"
                       FontSize="20"
                       Foreground="#f5f5f5"
                       Margin="0,0,0,10"/>

            <TextBlock Text="This tool displays basic system information and provides shortcuts for IT support."
                       TextWrapping="Wrap"
                       Foreground="#f5f5f5"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Source Code:"
                       Foreground="#f5f5f5"
                       FontWeight="Bold"/>
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/kirune/PRH_Computer_Info.git"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/kirune/PRH_Computer_Info.git
                </Hyperlink>
            </TextBlock>

            <TextBlock Text="License:"
                       Foreground="#f5f5f5"
                       FontWeight="Bold"
                       Margin="0,10,0,0"/>
            <TextBlock Text="This program is licensed under the GNU General Public License v3.0 (GPL-3.0)."
                       TextWrapping="Wrap"
                       Foreground="#f5f5f5"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Instructions:"
                       Foreground="#f5f5f5"
                       FontWeight="Bold"
                       Margin="0,10,0,0"/>
            <TextBlock Text="• Copy system info: Click 'Copy Info'.
• Contact IT: Opens email with system info.
• Add Printer: Choose a shared printer, optionally set it as default.
• Epic Help: Opens Providence/Informatics support page."
                       TextWrapping="Wrap"
                       Foreground="#f5f5f5"
                       Margin="0,0,0,10"/>
        </StackPanel>
    </ScrollViewer>
</Window>
